<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/right_message_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        style="@style/icon"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="8dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true">
        <!--            app:cardBackgroundColor="@color/colorPrimary">-->
        <ImageView
            android:id="@+id/chat_message_right_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/default_icon" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/right_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="82dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rectangular_round_white"
        android:padding="12dp"
        android:text="right received message"
        android:textColor="@android:color/black"
        />

    <ImageView
        android:id="@+id/right_message_image"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:layout_alignEnd="@id/right_message_text"
        android:layout_marginEnd="82dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/right_message_text"
        android:padding="0dp"/>


</RelativeLayout>