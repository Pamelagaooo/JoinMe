<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

        <androidx.cardview.widget.CardView
            style="@style/icon"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">
            <ImageView
                android:id="@+id/chat_message_left_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/default_icon" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/left_message_text"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangular_round_white"
            android:padding="12dp"
            android:text="Left received message"
            android:textColor="@android:color/black"
            android:layout_marginTop="8dp"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="82dp"/>

        <ImageView
            android:id="@+id/left_message_image"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:layout_marginStart="82dp"
            android:layout_alignParentStart="true"
            android:layout_alignStart="@+id/left_message_text"
            android:layout_below="@+id/left_message_text"/>

</RelativeLayout>